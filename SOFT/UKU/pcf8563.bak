i2c_SendByte(0xfe);
i2c_ReadAcknowledge();

*/	

}

//-----------------------------------------------
void pcf8563_write(char adr, char in)
{

__disable_irq();		
i2c_Start();
i2c_SendAddress(0xA2,0);
i2c_ReadAcknowledge();
i2c_SendByte(adr);
i2c_ReadAcknowledge();
i2c_SendByte(in);
i2c_ReadAcknowledge();
i2c_Stop();
__enable_irq();

}
